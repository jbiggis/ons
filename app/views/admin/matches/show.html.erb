<div class='content'>
<div id='match-not-wrapper'>
<div class='title'>
	Matched FWBs - Awaiting notifications.
</div>

	<table id='match_notifications'>
		<tr class='one'>
			<td>HunterID</td>
			<td>TargetID</td>
			<td>TargetName</td>
			<td>MatchedAt</td>
		</tr>
		<% @targets.each do |t| %>
			<tr>
				<td><%= t.hunter_id %></td>
				<td><%= t.target_id %></td>
				<td><%= t.name %></td>
				<td><%= t.matched_at %></td>
			</tr>
		<% end %>
	</table>

<div id='send-not-email-btn'><%= button_to 'Send Notification Emails', update_admin_matches_path, :method => :put %></div>
</div>
</div>
