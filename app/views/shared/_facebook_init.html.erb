function addTarget(obj,element){

	$.ajax({
		type: 'POST',
		url: '/targets',
		data: obj,
		success: function(data){
				
				switch(data) {
				
				case 'target_added':				
					element.addClass("selected");
					id = element.attr("id");
					var liElement = document.createElement("li");
					liElement.innerHTML="<a class='target "+id+"' id='"+id+"' href='#'><img src='http://graph.facebook.com/"+id+"/picture'></a>";
					$(".result").append(liElement);
					break;

				case 'matched':
					element.addClass("selected");
					id = element.attr("id");
					var liElement = document.createElement("li");
					liElement.innerHTML="<a class='matched "+id+"' id='"+id+"' href='#'><img src='http://graph.facebook.com/"+id+"/picture'></a>";
					$(".matched").append(liElement);
									
					break;

				case 'no_credits':
					alert('Not enough credits. \nPlease purchase more using the link above.');

					break;
				default:

					alert("Please email the administrator.");
				
				}
			},
		error: function() {
				alert("Failed to add. Please email the administrator.");
			}
		
	});
	
}

